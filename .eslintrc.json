{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "warn",
    "prefer-arrow-callback": "warn"
  },
  "overrides": [
    {
      "files": ["src/**/*.js", "src/**/*.jsx"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}